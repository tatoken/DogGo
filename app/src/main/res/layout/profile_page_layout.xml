<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@color/myWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/component_background"
            android:orientation="vertical"
            android:padding="20dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personal area"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/myBlack" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="5dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/profileImageBig"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blanck_people"
                    android:adjustViewBounds="true"
                    android:contentDescription="Foto ricetta"
                    android:background="@android:color/transparent"
                    android:cropToPadding="true" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingTop="16dp"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/birthDate"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthdate"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="15dp"/>


            <Button
                android:id="@+id/btnSelPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Pick a picture"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <!-- LOGOUT BUTTON -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Logout"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />
        </LinearLayout>



        <!-- DOG DATA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/component_background"
            android:orientation="vertical"
            android:padding="20dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dog Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/myBlack" />

                <ImageButton
                    android:id="@+id/btnEditPersonal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/icons8_modificare_24"
                    android:contentDescription="Edit personal data"
                    app:tint="@color/myGrayDark" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="5dp" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Name"
                app:valueText="Fido"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/breed_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Breed"
                app:valueText="Labrador"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/sex_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Sex"
                app:valueText="Male"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/age_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Age"
                app:valueText="8"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/microchip_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Microchip ID"
                app:valueText="2312312313"
                app:required="true" />
        </LinearLayout>



        <!-- DIET DATA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/component_background"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/dietDataSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diet Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/myBlack" />

                <ImageButton
                    android:id="@+id/btnEditDiet"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/icons8_modificare_24"
                    android:contentDescription="Edit diet data"
                    app:tint="@color/myGrayDark" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_insert_diet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_black_bg"
                android:text="Insert Diet"
                android:textAllCaps="false"
                android:textColor="@color/myWhite"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/carbs_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Carbohydrates"
                app:valueText="250g"
                android:visibility="gone" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/fats_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Fats"
                app:valueText="150g"
                android:visibility="gone" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/proteins_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Proteins"
                app:valueText="125g"
                android:visibility="gone" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/fibers_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Fibers"
                app:valueText="60g"
                android:visibility="gone" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/vitamins_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Vitamins"
                app:valueText="50g"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
