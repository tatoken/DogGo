<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@color/myWhite">

        <!-- PERSONAL DATA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/component_background"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personal Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/myBlack" />

                <ImageButton
                    android:id="@+id/btnEditPersonal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/icons8_modificare_24"
                    android:contentDescription="Edit personal data"
                    app:tint="@color/myGrayDark" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="5dp" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Name"
                app:valueText="Fido"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/breed_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Breed"
                app:valueText="Labrador"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/sex_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Sex"
                app:valueText="Male"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/age_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Age"
                app:valueText="8"
                app:required="true" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/microchip_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Microchip ID"
                app:valueText="2312312313"
                app:required="true" />
        </LinearLayout>

        <!-- HEALTH DATA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/component_background"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Health Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/myBlack" />

                <ImageButton
                    android:id="@+id/btnEditHealth"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/icons8_modificare_24"
                    android:contentDescription="Edit health data"
                    app:tint="@color/myGrayDark" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/weight_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Weight"
                app:valueText="32 Kg" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/vaccinations_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Vaccinations"
                app:valueText="Polyvalent" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/allergies_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Allergies"
                app:valueText="None" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/interventions_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Interventions"
                app:valueText="Sterilization" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/treatments_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Treatments"
                app:valueText="Anti-parasitics" />
        </LinearLayout>

        <!-- DIET DATA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/component_background"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diet Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/myBlack" />

                <ImageButton
                    android:id="@+id/btnEditDiet"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/icons8_modificare_24"
                    android:contentDescription="Edit diet data"
                    app:tint="@color/myGrayDark" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/carbs_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Carbohydrates"
                app:valueText="250g" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/fats_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Fats"
                app:valueText="150g" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/proteins_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Proteins"
                app:valueText="125g" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/fibers_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Fibers"
                app:valueText="60g" />

            <com.example.doggo_ourapp.ProfilePageInfoComponent
                android:id="@+id/vitamins_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Vitamins"
                app:valueText="50g" />
        </LinearLayout>

        <!-- LOGOUT BUTTON -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/myWhite"
            android:textStyle="bold"
            android:background="@drawable/button_primary_bg"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>
