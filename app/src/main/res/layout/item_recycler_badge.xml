<!-- res/layout/item_badge.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/badgeIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/change_circle_24"
    android:contentDescription="Badge Icon"
    android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/badgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome badge"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/badgeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="14sp"
            android:textColor="#666666" />

        <com.example.doggo_ourapp.GeneralProgressBarComponent
            android:id="@+id/progressBarBadge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.example.doggo_ourapp.GeneralProgressBarComponent>
    </LinearLayout>

</LinearLayout>
