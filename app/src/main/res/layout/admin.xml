<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Dog Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dog"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/addDog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Add Dog" />

                <Button
                    android:id="@+id/getActualDog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Get Current Dog" />

                <!--
                <Button
                    android:id="@+id/selectActualDog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Select Current Dog" />
                -->
                <Button
                    android:id="@+id/loadDog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Load Dog" />

                <TextView
                    android:id="@+id/dogInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DogInfo"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Training Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Training"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/addTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Add Training" />

                <Button
                    android:id="@+id/seeAllTrainings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="View All Trainings" />

                <Button
                    android:id="@+id/seeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="View Training" />

                <TextView
                    android:id="@+id/trainingInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Training Info"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Events Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/addEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Add Event" />

                <Button
                    android:id="@+id/seeAllEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="View All Events" />

                <Button
                    android:id="@+id/seeEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="View Event" />

                <TextView
                    android:id="@+id/eventInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Info"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Badge Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Badges"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/addBadge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Add Badge" />

                <Button
                    android:id="@+id/seeBadge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="View Unlocked Badges" />

                <Button
                    android:id="@+id/checkBadge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Check Badge" />

                <TextView
                    android:id="@+id/badgeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Badge Info"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Prize Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prize"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />


                <Button
                    android:id="@+id/addPrize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Add Prize" />

                <Button
                    android:id="@+id/getPrize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Get Kibbles" />

                <Button
                    android:id="@+id/seePrize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="See My Prizes" />

                <TextView
                    android:id="@+id/prizeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PrizeInfo"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Food Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/addDiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Add Diet" />

                <Button
                    android:id="@+id/loadDiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Load Diet" />

                <Button
                    android:id="@+id/addRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Add Recipe" />

                <Button
                    android:id="@+id/loadRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/myBlack"
                    android:textColor="@android:color/white"
                    android:text="Load All Recipe" />

                <TextView
                    android:id="@+id/dietInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FoodInfo"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</ScrollView>
