<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/component_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnDeleteRecipe"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/icons8_rimuovere_30"
                android:contentDescription="Delete recipe"
                app:tint="@color/myGrayDark" />
        </LinearLayout>



        <!-- Titolo -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flavored Watermelon with Lemon"
            android:textStyle="bold"
            android:textSize="20sp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/myBlack"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- Immagine -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipePhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/recipe_loading_icon"
                android:contentDescription="Recipe image"
                android:cropToPadding="true" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!-- TIME -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/baseline_access_time_24" />

                <TextView
                    android:id="@+id/recipeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="TIME: 3h"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- DIFFICULTY -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icons8_lampadina" />

                <TextView
                    android:id="@+id/recipeDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="DIFFICULTY: Easy"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- COST -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icons8_cost" />

                <TextView
                    android:id="@+id/recipeCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="COST: Easy"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"

            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray" />

        <!-- Info nutrizionali -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NUTRITION LABEL"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/myBlack"
                    android:layout_marginBottom="8dp" />

                <!-- Nutritional values -->
                <TextView
                    android:id="@+id/carbohydratesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrates: 10"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fatsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fats: 10"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/proteinsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proteins: 10"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fibersValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fibers: 10"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/vitaminsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vitamins: 10"
                    android:textColor="@color/myBlack"
                    android:textSize="12sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray" />

        <!-- Descrizione -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HOW TO"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/myBlack"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/recipeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INGREDIENTS:\n• Watermelon\n• Lemon\n\nDESCRIPTION:\nCut the watermelon...\nServe cold."
                    android:textColor="@color/myBlack"
                    android:textSize="12sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
