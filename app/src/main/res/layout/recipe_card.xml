<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/component_background"
        android:padding="10dp">

        <!-- Titolo ricetta -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Flavored Watermelon with Lemon"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/myBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Immagine -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipePhoto"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/recipeTitle"
            app:layout_constraintBottom_toTopOf="@id/timeDifficultyCost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nutritionDeclaration">

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/recipe_loading_icon"
                android:contentDescription="Recipe Image"
                android:background="@android:color/transparent"
                android:cropToPadding="true" />
        </androidx.cardview.widget.CardView>

        <!-- Nutritional Info -->
        <LinearLayout
            android:id="@+id/nutritionDeclaration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/recipePhoto"
            app:layout_constraintStart_toEndOf="@id/recipePhoto"
            app:layout_constraintEnd_toEndOf="parent">


            <TextView
                android:id="@+id/ingredientsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUTRITION LABEL:"
                android:textColor="@color/myBlack"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/carbohydratesValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carbohydrates: 10"
                android:textColor="@color/myBlack"
                android:textSize="10sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/fatsValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fats: 10"
                android:textColor="@color/myBlack"
                android:textSize="10sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/proteinsValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proteins: 10"
                android:textColor="@color/myBlack"
                android:textSize="10sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/fibersValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fibers: 10"
                android:textColor="@color/myBlack"
                android:textSize="10sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/vitaminsValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamins: 10"
                android:textColor="@color/myBlack"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeDifficultyCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <!-- TIME -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/baseline_access_time_24" />

                <TextView
                    android:id="@+id/recipeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="TIME: 3h"
                    android:textColor="@color/myBlack"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- DIFFICULTY -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icons8_lampadina" />

                <TextView
                    android:id="@+id/recipeDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="DIFFICULTY: Easy"
                    android:textColor="@color/myBlack"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- COST -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icons8_cost" />

                <TextView
                    android:id="@+id/recipeCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="COST: Easy"
                    android:textColor="@color/myBlack"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
