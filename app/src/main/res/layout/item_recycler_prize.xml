<!-- res/layout/item_badge.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/prizeIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/prize_loading_icon"
    android:contentDescription="Prize Icon"
    android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/prizeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome prize"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prizeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/prizeThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="@color/myBlack" />

    </LinearLayout>

</LinearLayout>
