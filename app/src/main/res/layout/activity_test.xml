<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/addDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi cane"
        />

    <Button
        android:id="@+id/loadDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carica cane"
        />

    <TextView
        android:id="@+id/dogInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DogInfo"/>

    <Button
        android:id="@+id/addDiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi dieta"
        />

    <Button
        android:id="@+id/loadDiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carica dieta"
        />

    <TextView
        android:id="@+id/dietInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DietInfo"/>

    <Button
        android:id="@+id/addDietRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi ricetta della dieta"
        />

    <Button
        android:id="@+id/loadDietRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carica ricetta della dieta"
        />

    <TextView
        android:id="@+id/dietRecipeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DietRecipeInfo"/>


</LinearLayout>