            app:layout_constraintHeight_percent="0.05"
            android:textSize="13sp"
            android:textColor="@color/myBlack"
            android:gravity="center_vertical"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/recipePhoto"
