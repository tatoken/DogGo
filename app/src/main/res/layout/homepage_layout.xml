<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/myWhite">

    <!-- Sezione dedicata alla pagina Gym ( grafico )-->
    <LinearLayout
        android:id="@+id/chartSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="0dp"
        android:background="@drawable/component_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/calendarSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Km covered this month"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/myBlack"
            />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- Sezione dedicata alla pagina Calendar ( Lista di eventi )-->
    <LinearLayout
        android:id="@+id/calendarSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/component_background"
        app:layout_constraintTop_toBottomOf="@id/chartSection"
        app:layout_constraintBottom_toTopOf="@id/trophySection"
        app:layout_constraintEnd_toStartOf="@id/foodSection"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upcoming events"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/myBlack"/>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           >
           <TextView
               android:id="@+id/calendarSection_month_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3 March"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/calendarSection_hour_1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@id/calendarSection_event_1"
               />
           <TextView
               android:id="@+id/calendarSection_hour_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="16:20"
               app:layout_constraintTop_toBottomOf="@id/calendarSection_month_1"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@id/calendarSection_event_1"

               />

           <TextView
               android:id="@+id/calendarSection_event_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Pill"
               android:textStyle="bold"
               android:gravity="center"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/calendarSection_month_1"
               />

       </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCCCCC" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/calendarSection_month_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 March"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/calendarSection_hour_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/calendarSection_event_2"
                />
            <TextView
                android:id="@+id/calendarSection_hour_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                app:layout_constraintTop_toBottomOf="@id/calendarSection_month_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/calendarSection_event_2"

                />

            <TextView
                android:id="@+id/calendarSection_event_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vet"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/calendarSection_month_2"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Sezione dedicata alla pagina Food ( Ricetta giornaliera )-->
    <LinearLayout
        android:id="@+id/foodSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/component_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/chartSection"
        app:layout_constraintBottom_toTopOf="@id/trophySection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/calendarSection"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily receipe"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/myBlack"
            android:layout_marginBottom="5dp"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/recipeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />
        </HorizontalScrollView>


    </LinearLayout>

    <!-- Sezione dedicata alla pagina Trophy ( Lista di challenge in corso )-->
    <LinearLayout
        android:id="@+id/trophySection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/component_background"
        app:layout_constraintTop_toBottomOf="@id/calendarSection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ongoing challenge"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/myBlack"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBadge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
